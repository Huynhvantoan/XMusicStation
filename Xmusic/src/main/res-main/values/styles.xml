<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:typeface">sans</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:buttonStyle">@style/CamelCaseButton</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="TextAppearance.Stocks.Subhead" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/global_text_size_subhead</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BorderLessButtonStyle" parent="CamelCaseButton">

    </style>

    <style name="CamelCaseButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Translucent.NoTitleBar" />

    <style name="PlayerSeekbarStyle" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar</item>
        <item name="android:minHeight">@dimen/seekbar_height</item>
        <item name="android:maxHeight">@dimen/seekbar_height</item>
        <item name="android:thumb">@drawable/ic_thumb</item>
        <item name="android:splitTrack">false</item>
    </style>

</resources>
